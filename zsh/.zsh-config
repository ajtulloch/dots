# -*- mode: sh; -*-
alias emacs=/Applications/Emacs.app/Contents/MacOS/Emacs
alias e='emacsclient --create-frame -s ~/.local/emacs-server/server'
export EDITOR='emacsclient --create-frame -s ~/.local/emacs-server/server'
export HGEDITOR='emacsclient --create-frame -s ~/.local/emacs-server/server'

# Fix hg pager behaviour.
export LESS='FSRX'

# Phabricator
export PHABRICATORPATH=~/Code/phabricator
export PATH=$PATH:$PHABRICATORPATH/arcanist/bin

# GoLang
export GOPATH=~/Code/go
export GOROOT=`brew --prefix`/go
export PATH=$PATH:$GOPATH/bin

# Homebrew, etc.
export PATH=/usr/local/bin:$PATH
export PATH=~/Code/bin/bin:$PATH

# Rust, etc.

# Cuda
export PATH=/Developer/NVIDIA/CUDA-5.5/bin:$PATH
export DYLD_LIBRARY_PATH=/Developer/NVIDIA/CUDA-5.5/lib:$DYLD_LIBRARY_PATH

# Haskell
export PATH=~/.cabal/bin:$PATH

# General
export PATH=~/bin:$PATH

# RVM
export PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
export PATH="$PATH":~/Code/chromium/depot_tools
source virtualenvwrapper.sh
export VIRTUAL_ENV_DISABLE_PROMPT=1

# Racket
export PATH=$PATH:/Applications/Racket\ v6.0/bin

# Julia
export PATH=/Applications/Julia-0.3.0-prerelease-f6296a6533.app/Contents/Resources/julia/bin:$PATH

# https://github.com/JuliaLang/Homebrew.jl/issues/35
export LD_LIBRARY_PATH=/usr/local/lib:/usr/local/opt/cairo/lib:/usr/local/opt/gettext/lib/

# CUDA
export PATH=$PATH:/usr/local/cuda/bin/

export PATH="/Users/tulloch/.cask/bin:$PATH"
# export PATH="/Users/tulloch/anaconda3/bin:$PATH"
# export PATH="/Users/tulloch/anaconda2/bin:$PATH"

export PATH="/opt/android_ndk/android-ndk-r10e:$PATH"
export PATH="/opt/android_ndk/android-ndk-r12b:$PATH"
export PATH="/opt/android_sdk/tools:$PATH"
export PATH="/opt/android_sdk/platform-tools:$PATH"
export ANDROID_SDK=/opt/android_sdk
export ANDROID_HOME=/opt/android_sdk
export ANDROID_NDK=/opt/android_ndk/android-ndk-r10e
export ANDROID_NDK=/opt/android_ndk/android-ndk-r12b
export ANDROID_NDK_REPOSITORY=/opt/android_ndk

# Rust
source $HOME/.cargo/env

HISTFILE="$HOME/.zsh_history"
HISTSIZE=10000000
SAVEHIST=10000000
setopt BANG_HIST                 # Treat the '!' character specially during expansion.
setopt EXTENDED_HISTORY          # Write the history file in the ":start:elapsed;command" format.
setopt INC_APPEND_HISTORY        # Write to the history file immediately, not when the shell exits.
setopt SHARE_HISTORY             # Share history between all sessions.
setopt HIST_EXPIRE_DUPS_FIRST    # Expire duplicate entries first when trimming history.
setopt HIST_IGNORE_DUPS          # Don't record an entry that was just recorded again.
setopt HIST_IGNORE_ALL_DUPS      # Delete old recorded entry if new entry is a duplicate.
setopt HIST_FIND_NO_DUPS         # Do not display a line previously found.
setopt HIST_IGNORE_SPACE         # Don't record an entry starting with a space.
setopt HIST_SAVE_NO_DUPS         # Don't write duplicate entries in the history file.
setopt HIST_REDUCE_BLANKS        # Remove superfluous blanks before recording entry.
setopt HIST_VERIFY               # Don't execute immediately upon history expansion.
setopt HIST_BEEP                 # Beep when accessing nonexistent history.
