export PATH=$PATH:$GOPATH/bin

# Homebrew, etc.
export PATH=/usr/local/bin:$PATH
export PATH=~/Code/bin/bin:$PATH

# Rust, etc.

# Cuda
# export PATH=/Developer/NVIDIA/CUDA-5.5/bin:$PATH
